extends ../layout
block content
   div.page-header
      div.row 
         div.col-xs-9
            h1 Blog
         div.col-xs-3
            div.btn-group.pull-right
               a.btn.btn-sm.btn-success(href='/admin/blog/new')
                  b.glyphicon.glyphicon-plus
      
   div.row
      div.col-md-9
         ul.list-group
            - for (var i=0; i < blogs.length; i++){
               - var blog = blogs[i];
                  li.list-group-item
                     div.row
                        div.col-xs-10
                           a(href='/admin/blog/edit/' + blog.slug, data-blog=blog._id) #{blog.title}
                        div.col-xs-2
                           button.delete-blog-btn.btn.btn-danger.btn-xs.pull-right(data-blog=blog._id)
                              b.glyphicon.glyphicon-remove
            - }
      div.col-md-3
         include nav
