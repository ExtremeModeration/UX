extends layout

block content
   
   div.page-header
      h1 Blog
      
   - for (var i=0; i < blogs.length; i++) {
      - var blog = blogs[i];
         div.row.blog-item
            div.col-xs-12
               h3
                  a(href='/blog/' + blog.slug) #{blog.title}
               div.blog-body !{md.toHTML(blog.body)}
               hr
   - }
